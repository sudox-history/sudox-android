<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.Friends.FriendItemView" parent="">
        <item name="android:clipToPadding">false</item>

        <item name="photoWidth">@dimen/frienditemview_photo_width</item>
        <item name="photoHeight">@dimen/frienditemview_photo_height</item>
        <item name="marginBetweenNameAndStatus">@dimen/frienditemview_margin_between_name_and_status</item>
        <item name="marginBetweenAvatarAndTexts">@dimen/frienditemview_margin_between_avatar_and_texts</item>
        <item name="marginBetweenButtons">@dimen/frienditemview_margin_between_buttons</item>

        <item name="nameTextAppearance">@style/Sudox.Friends.FriendItemView.NameTextAppearance</item>
        <item name="statusTextAppearance">@style/Sudox.Friends.FriendItemView.StatusTextAppearance</item>
        <item name="acceptButtonStyle">@style/Sudox.Friends.FriendItemView.Buttons.Accept</item>
        <item name="rejectButtonStyle">@style/Sudox.Friends.FriendItemView.Buttons.Reject</item>

        <item name="offlineTextMask">@string/seen_mask</item>
        <item name="offlineTextColor">@color/frienditemview_offline_text_color</item>
        <item name="onlineTextColor">@color/frienditemview_online_text_color</item>
        <item name="onlineText">@string/online</item>
    </style>

    <style name="Sudox.Friends.FriendItemView.NameTextAppearance" parent="">
        <item name="android:textSize">@dimen/frienditemview_name_text_size</item>
        <item name="android:textColor">@color/frienditemview_name_text_color</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Sudox.Friends.FriendItemView.StatusTextAppearance">
        <item name="android:textSize">@dimen/frienditemview_status_text_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Sudox.Friends.FriendItemView.Buttons" parent="Sudox.Button">
        <item name="iconWidth">@dimen/frienditemview_buttons_icon_width</item>
        <item name="iconHeight">@dimen/frienditemview_buttons_icon_height</item>
    </style>

    <style name="Sudox.Friends.FriendItemView.Buttons.Accept" parent="Sudox.Friends.FriendItemView.Buttons">
        <item name="iconDrawableTint">@color/frienditemview_accept_button_icon_tint</item>
        <item name="iconDrawable">@drawable/ic_accept</item>
    </style>

    <style name="Sudox.Friends.FriendItemView.Buttons.Reject" parent="Sudox.Friends.FriendItemView.Buttons">
        <item name="iconDrawableTint">@color/frienditemview_reject_button_icon_tint</item>
        <item name="iconDrawable">@drawable/ic_cancel</item>
    </style>

    <style name="Sudox.Friends.MaybeYouKnowItemView" parent="">
        <item name="android:background">@drawable/background_maybe_you_know_item</item>
        <item name="android:paddingLeft">@dimen/maybeyouknowitemview_padding_left</item>
        <item name="android:paddingRight">@dimen/maybeyouknowitemview_padding_right</item>
        <item name="android:paddingBottom">@dimen/maybeyouknowitemview_padding_bottom</item>
        <item name="android:paddingTop">@dimen/maybeyouknowitemview_padding_top</item>

        <item name="android:outlineProvider">bounds</item>

        <item name="mutualFriendsCountMask">@string/mutual_friends_mask</item>
        <item name="photoWidth">@dimen/maybeyouknowitemview_photo_width</item>
        <item name="photoHeight">@dimen/maybeyouknowitemview_photo_height</item>
        <item name="marginBetweenNameAndPhoto">@dimen/maybeyouknowitemview_margin_between_name_and_photo</item>
        <item name="marginBetweenNameAndMutualFriendsCount">@dimen/maybeyouknowitemview_margin_between_name_and_mutual_friends_count</item>
        <item name="mutualFriendsCountTextAppearance">@style/Sudox.Friends.MaybeYouKnowItem.MutualFriendsCountTextAppearance</item>
        <item name="nameTextAppearance">@style/Sudox.Friends.MaybeYouKnowItem.NameTextAppearance</item>
        <item name="closeButtonStyle">@style/Sudox.Friends.MaybeYouKnowItem.CloseButton</item>
        <item name="closeButtonTopMargin">@dimen/maybeyouknowitemview_close_button_top_margin</item>
        <item name="closeButtonRightMargin">@dimen/maybeyouknowitemview_close_button_right_margin</item>

        <item name="android:maxHeight">@dimen/maybeyouknowitemview_height</item>
        <item name="android:minHeight">@dimen/maybeyouknowitemview_height</item>
        <item name="android:maxWidth">@dimen/maybeyouknowitemview_width</item>
        <item name="android:minWidth">@dimen/maybeyouknowitemview_width</item>
    </style>

    <style name="Sudox.Friends.MaybeYouKnowItem.NameTextAppearance" parent="">
        <item name="android:textSize">@dimen/maybeyouknowitemview_name_text_size</item>
        <item name="android:textColor">@color/maybeyouknowitemview_name_text_color</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Sudox.Friends.MaybeYouKnowItem.MutualFriendsCountTextAppearance" parent="">
        <item name="android:textSize">@dimen/maybeyouknowitemview_mutual_friends_count_text_size</item>
        <item name="android:textColor">@color/maybeyouknowitemview_mutual_friends_count_text_color</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Sudox.Friends.MaybeYouKnowItem.CloseButton" parent="Sudox.Button">
        <item name="iconHeight">@dimen/maybeyouknowitemview_close_button_icon_height</item>
        <item name="iconWidth">@dimen/maybeyouknowitemview_close_button_icon_width</item>
        <item name="iconDrawableTint">@color/maybeyouknowitemview_close_button_icon_tint</item>
        <item name="iconDrawable">@drawable/ic_cancel</item>
    </style>
</resources>