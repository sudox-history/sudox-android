<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <!-- Application launcher. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/screen_splash</item>
    </style>

    <!-- Toolbar styles start -->
    <style name="ToolbarTheme.AppBarLayout">
        <item name="android:elevation">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="contentInsetStart">25dp</item>
        <!-- Calculation of toolbar right padding:
             right padding of the design in the design - padding of the menu item - half of icon width = 34dp - 16dp - 8dp = 10dp -->
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">@dimen/navbar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
    </style>

    <style name="ToolbarTheme.Child" parent="ToolbarTheme">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <!-- Calculation of toolbar left padding:
             left padding of the design in the design - padding of the icon - half of icon width = 27dp - 16dp - 8dp = 3dp -->
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="ToolbarTheme.Child.Container">
        <item name="android:translationX">-15dp</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_size_increased_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="ToolbarTheme.ChatToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="EditFieldTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme.ExpandedView">
        <item name="android:paddingLeft">27dp</item>
        <!-- In design - 1/2 of menu icon in the toolbar = 34dp - 8dp = 26dp -->
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ToolbarTheme.ExpandedView.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edit_text_navbar_addition</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">@dimen/font_size_extra_tiny</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarTheme.ExpandedView.NameTextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Toolbar styles end -->

    <!-- Bottom navigation view styles start -->
    <style name="BottomNavigationView">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/colorBottomNavigationBackground</item>
        <item name="android:itemPadding">42dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation_item</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">0dp</item>
        <item name="itemBackground">@null</item>
    </style>
    <!-- Bottom navigation view styles end -->

    <!-- No padding text view -->
    <style name="TextViewWithoutPaddings">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>
</resources>
