<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="contentInsetStart">25dp</item>
        <!-- Calculation of toolbar right padding:
             right padding of the design in the design - padding of the menu item = 29dp - 16dp = 13dp -->
        <item name="android:paddingRight">13dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">@dimen/navbar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_size_increased_medium</item>
    </style>

    <style name="ToolbarTheme.Addition">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">29dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="ToolbarTheme.Addition.EditText">
        <item name="android:background">@drawable/edit_text_navbar_addition</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/font_size_extra_tiny</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Application launcher. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/screen_splash</item>
    </style>

</resources>
