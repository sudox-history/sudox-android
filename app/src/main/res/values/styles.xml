<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Application launcher. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/screen_splash</item>
    </style>

    <!-- Toolbar styles start -->
    <style name="ToolbarTheme.AppBarLayout">
        <item name="android:elevation">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="contentInsetStart">25dp</item>
        <!-- Calculation of toolbar right padding:
             right padding of the design in the design - padding of the menu item - half of icon width = 34dp - 16dp - 8dp = 10dp -->
        <item name="android:paddingRight">10dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
    </style>

    <style name="ToolbarTheme.Child" parent="ToolbarTheme">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <!-- Calculation of toolbar left padding:
             left padding of the design in the design - padding of the icon - half of icon width = 27dp - 16dp - 8dp = 3dp -->
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="ToolbarTheme.Child.Container">
        <item name="android:translationX">-15dp</item>
    </style>

    <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">19sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <!-- Bottom navigation view styles start -->
    <style name="BottomNavigationView">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@color/colorBottomNavigationBackground</item>
        <item name="android:itemPadding">42dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation_item</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="elevation">0dp</item>
    </style>
    <!-- Bottom navigation view styles end -->

    <!-- No padding text view -->
    <style name="TextViewWithoutPaddings">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTheme.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:elevation">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTheme.TabLayout.TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ParametersRecyclerView">
        <item name="android:background">#1A1E28</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- Chats -->


</resources>
