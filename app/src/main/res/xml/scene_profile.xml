<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/scene_profile_end"
        motion:constraintSetStart="@id/scene_profile_start" />

    <ConstraintSet android:id="@+id/scene_profile_start">
        <Constraint
            android:id="@+id/profileAvatarView"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileToolbar" />

        <Constraint
            android:id="@+id/profileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@+id/profileStatusText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileAvatarView"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@+id/profileStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileNameText" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/scene_profile_end">
        <Constraint
            android:id="@+id/profileAvatarView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileToolbar" />

        <Constraint
            android:id="@+id/profileNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@+id/profileStatusText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileAvatarView"
            app:layout_constraintTop_toTopOf="@+id/profileAvatarView"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@+id/profileStatusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/profileAvatarView"
            app:layout_constraintStart_toStartOf="@+id/profileNameText"
            app:layout_constraintTop_toBottomOf="@id/profileNameText" />
    </ConstraintSet>
</MotionScene>