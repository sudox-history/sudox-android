<?xml version="1.0" encoding="utf-8"?>
<com.sudox.android.ui.views.overlay.OverlappedRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar section start -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        style="@style/ToolbarTheme.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/contactsToolbar"
            style="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/contacts" />

        <com.sudox.android.ui.views.toolbar.ContactAddExpandedView
            android:id="@+id/contactAddExpandedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/contactsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar"
        android:clipToPadding="false"
        android:paddingTop="16dp" />

