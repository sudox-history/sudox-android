<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_profile">

    <com.sudox.design.navigation.toolbar.SudoxToolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/profile" />

    <!-- Profile info block start -->

    <View
        android:id="@+id/profileInfoBlockCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/profileInfoBlockBottomSpace"
        app:layout_constraintTop_toTopOf="@+id/profileAvatarView" />

    <com.sudox.design.avatar.AvatarView
        android:id="@+id/profileAvatarView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileToolbar" />

    <TextView
        android:id="@+id/profileNameText"
        style="@style/TextViewWithoutPaddings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:text="Митюшкин Максим"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileAvatarView" />

    <TextView
        android:id="@+id/profileStatusText"
        style="@style/TextViewWithoutPaddings"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:text="Undefined status"
        android:textAlignment="center"
        android:textColor="#BDBDBD"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileNameText" />

    <Space
        android:id="@+id/profileInfoBlockBottomSpace"
        android:layout_width="1dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileStatusText" />

    <!-- Profile info block end -->

    <android.support.design.widget.TabLayout
        android:id="@+id/profileTabLayout"
        style="@style/AppTheme.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profileInfoBlockCover" />

    <android.support.v4.view.ViewPager
        android:id="@+id/profileViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTabLayout" />

</android.support.constraint.motion.MotionLayout>