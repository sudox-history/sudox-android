<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/foundedContactAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="#ffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/foundedContactAvatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/foundedContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Антон Янкин"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/foundedContactStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Антон Янкин"
            android:textColor="@color/colorHint"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/foundedContactAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add" />

</RelativeLayout>