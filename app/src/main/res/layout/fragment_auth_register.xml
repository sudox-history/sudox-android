<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.sudox.android.ui.views.AuthNavigationBar
        android:id="@+id/authRegisterFragmentNavbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:nextButtonIsVisible="true"
        app:sudoxTagIsVisible="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/what_is_your_name"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/enter_your_name_and_nickname"
        android:textSize="@dimen/font_size_medium" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/nameEditTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/font_size_increased_tiny" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/surnameEditTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <EditText
            android:id="@+id/surnameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/nickname"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="@dimen/font_size_increased_tiny" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="0.80"
            android:gravity="center"
            android:text="@string/about_name"
            android:textColor="@color/colorHint"
            android:textSize="@dimen/font_size_increased_tiny" />

    </LinearLayout>

</LinearLayout>