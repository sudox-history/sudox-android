<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tag"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/we_glad_to_see_you"
        android:textSize="16sp" />

    <com.sudox.design.edittext.SudoxTextInputLayout
        android:id="@+id/codeEditTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/length_email_code">

        <EditText
            android:id="@+id/codeEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/code"
            android:inputType="number"
            android:maxLength="@integer/length_email_code"
            android:textSize="14sp" />

    </com.sudox.design.edittext.SudoxTextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/enterYourCodeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.80"
            android:gravity="center"
            android:text="@string/enter_code_from_mail"
            android:textColor="@color/colorHint"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>