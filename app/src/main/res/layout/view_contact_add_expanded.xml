<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sudox.android.ui.views.toolbar.expanded.FoundedContactAddExpandedView
        android:id="@+id/foundedContactAddExpandedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactAddExpandedViewContainer" />

    <LinearLayout
        android:id="@+id/contactAddExpandedViewContainer"
        style="@style/ToolbarTheme.ExpandedView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search_16dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/add_new_contact"
            android:textSize="@dimen/font_size_increased_tiny" />

        <EditText
            android:id="@+id/emailEditText"
            style="@style/ToolbarTheme.ExpandedView.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/enter_email_of_user"
            android:imeOptions="actionSearch"
            android:inputType="textEmailAddress" />

    </LinearLayout>
</RelativeLayout>