<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageRootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">

    <com.sudox.design.layouts.MessageLinearLayout
        android:id="@+id/dialogMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_message_to_end"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp">

        <com.sudox.design.widgets.CorrectlyMeasuringTextView
            android:id="@+id/dialogMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Блять, как же все заебало, уууу, горит, ебанный пиздеееееееееец"
            android:textSize="15sp" />

        <com.sudox.design.widgets.PrecomputedTextView
            android:id="@+id/dialogMessageSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="22:00"
            android:textColor="#BDBDBD"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/dialogMessageSendStatus"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="bottom"
            android:visibility="gone" />

    </com.sudox.design.layouts.MessageLinearLayout>

    <View
        android:id="@+id/dialogMessageEndOfGroupMark"
        android:layout_width="7dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom"
        android:background="@drawable/triangle_bottom_left"
        android:visibility="invisible" />
</LinearLayout>