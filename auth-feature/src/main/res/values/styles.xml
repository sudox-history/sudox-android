<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sudox.Messenger.Auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">70dp</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.BackButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentTop">true</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:src">@drawable/ic_back</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.SplashImage">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">48dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">38dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/avenir_demibold</item>
        <item name="fontFamily">@font/avenir_demibold</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.SubtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#868686</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="fontFamily">@font/avenir_regular</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.FirstEditText" parent="Theme.Sudox.PhoneEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.ActionButton" parent="Theme.Sudox.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Theme.Sudox.Messenger.Auth.ActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">20dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>

        <item name="android:textColor">#868686</item>
        <item name="android:gravity">center</item>
    </style>
</resources>