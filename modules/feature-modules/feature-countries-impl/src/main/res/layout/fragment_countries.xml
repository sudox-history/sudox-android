<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ru.sudox.android.core.ui.toolbar.InsetAppBarLayout
        android:id="@+id/countriesAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.sudox.android.core.ui.toolbar.CenteredToolbar
            android:id="@+id/countriesToolbar"
            style="@style/Theme.Sudox.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_countries"
            app:title="@string/countries_title" />

    </ru.sudox.android.core.ui.toolbar.InsetAppBarLayout>

    <ru.sudox.simplelists.BasicListContainer
        android:id="@+id/countriesListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ru.sudox.simplelists.BasicList
            android:id="@+id/countriesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/listWithStickyLetterTopPadding"
            android:paddingBottom="6dp" />

    </ru.sudox.simplelists.BasicListContainer>
</LinearLayout>