<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="11dp"
    android:paddingEnd="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sectionHeaderTitle"
        style="@style/Theme.Sudox.ListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:iconPadding="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sectionHeaderActionButton"
        style="@style/Theme.Sudox.ListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:iconTint="?attr/colorOnSurface"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sectionHeaderCounterButton"
        style="@style/Theme.Sudox.ListButton.Counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        app:icon="@drawable/ic_baseline_keyboard_arrow_end"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>