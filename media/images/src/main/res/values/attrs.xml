<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlideImageView">
        <attr name="placeholderColor" format="reference" />
        <attr name="crossFadeDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="avatarColors" format="reference" />
        <attr name="avatarTextColor" format="color" />
        <attr name="avatarTextFontFamily" format="reference" />
        <attr name="avatarHeightPercent" format="float" />

        <attr name="indicatorNumberTextColor" format="color" />
        <attr name="indicatorNumberTextFontFamily" format="reference" />
        <attr name="indicatorNumberTextSize" format="dimension" />
        <attr name="indicatorNumberTextPaddingTop" format="dimension" />
        <attr name="indicatorNumberTextPaddingBottom" format="dimension" />
        <attr name="indicatorNumberTextPaddingLeft" format="dimension" />
        <attr name="indicatorNumberTextPaddingRight" format="dimension" />

        <attr name="indicatorCropColor" format="color" />
        <attr name="indicatorCropRadiusDiff" format="dimension" />
        <attr name="indicatorRadius" format="dimension" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <attr name="glideImageViewStyle" format="reference" />
    <attr name="avatarImageViewStyle" format="reference" />
</resources>