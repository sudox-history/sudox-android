<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.GlideImageView" parent="">
        <item name="placeholderColor">@color/placeholder_imageview_color</item>
        <item name="crossFadeDuration">@integer/imageview_crossfade_duration</item>
    </style>

    <style name="Sudox.AvatarImageView" parent="Sudox.GlideImageView">
        <item name="android:scaleType">fitStart</item>

        <item name="badgeColor">@color/avatarimageview_badge_color</item>
        <item name="avatarColors">@array/avatarimageview_avatar_colors</item>
        <item name="avatarTextColor">#FFFFFF</item>
        <item name="avatarTextFontFamily">@font/opensans_bold</item>
        <item name="avatarHeightPercent">0.3</item>
    </style>
</resources>