<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SudoxTheme.Auth">
        <item name="android:paddingTop">@dimen/auth_screen_top_padding</item>
        <item name="android:paddingLeft">@dimen/auth_screen_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/auth_screen_horizontal_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SudoxTheme.Auth.Title" parent="@style/SudoxTheme.TextAppearance">
        <item name="android:textSize">@dimen/auth_screen_title_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SudoxTheme.Auth.Subtitle" parent="@style/SudoxTheme.TextAppearance">
        <item name="android:layout_marginTop">@dimen/auth_screen_subtitle_top_margin</item>
        <item name="android:textSize">@dimen/auth_screen_subtitle_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>