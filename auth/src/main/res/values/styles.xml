<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.AuthScreenLayout" parent="Sudox.Screen">
        <item name="android:paddingTop">@dimen/authscreenlayout_padding_top</item>
        <item name="marginBetweenChildren">@dimen/authscreenlayout_margin_between_children</item>
        <item name="marginBetweenDescriptionAndChild">@dimen/authscreenlayout_margin_between_description_and_child</item>
        <item name="marginBetweenTitleAndDescription">@dimen/authscreenlayout_margin_between_title_and_description</item>
        <item name="marginBetweenIconAndDescription">@dimen/authscreenlayout_margin_between_icon_and_description</item>
        <item name="descriptionTextAppearance">@style/Sudox.AuthScreenLayout.DescriptionTextAppearance</item>
        <item name="titleTextAppearance">@style/Sudox.AuthScreenLayout.TitleTextAppearance</item>
    </style>

    <style name="Sudox.AuthScreenLayout.TitleTextAppearance" parent="">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/authscreenlayout_title_text_color</item>
        <item name="android:textSize">@dimen/authscreenlayout_title_text_size</item>
    </style>

    <style name="Sudox.AuthScreenLayout.DescriptionTextAppearance" parent="">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/authscreenlayout_description_text_color</item>
        <item name="android:textSize">@dimen/authscreenlayout_description_text_size</item>
    </style>
</resources>