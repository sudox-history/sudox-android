<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.ViewList" parent="">
        <item name="letterTextSize">@dimen/viewlist_letter_text_size</item>
        <item name="letterFontFamily">@font/opensans_bold</item>
        <item name="letterTextColor">@color/viewlist_letter_text_color</item>
        <item name="letterPaddingRight">@dimen/viewlist_letter_padding_right</item>
        <item name="letterPaddingTop">@dimen/viewlist_letter_padding_top</item>
        <item name="footerTextAppearance">@style/Sudox.ViewList.Footer</item>
        <item name="footerMargin">@dimen/viewlist_footer_margin</item>
    </style>

    <style name="Sudox.ViewList.Header" parent="">
        <item name="android:paddingTop">@dimen/viewlist_header_padding_top</item>
        <item name="android:paddingBottom">@dimen/viewlist_header_padding_bottom</item>
        <item name="iconAnimationDuration">@integer/popup_animation_duration</item>
        <item name="textAppearance">@style/Sudox.ViewList.Header.TextAppearance</item>
        <item name="toggleIconTint">@color/viewlist_header_toggle_icon_tint</item>
        <item name="toggleIconDrawable">@drawable/ic_arrow_up</item>
    </style>

    <style name="Sudox.ViewList.Header.TextAppearance" parent="">
        <item name="android:drawablePadding">
            @dimen/viewlist_header_margin_between_text_and_toggler
        </item>
        <item name="android:textColor">@color/viewlist_header_text_color</item>
        <item name="android:textSize">@dimen/viewlist_header_text_size</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Sudox.ViewList.Footer" parent="">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/viewlist_footer_text_color</item>
        <item name="android:textSize">@dimen/viewlist_footer_text_size</item>
    </style>
</resources>