<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingBottom">@dimen/button_padding_bottom</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Sudox.Button.Primary" parent="Sudox.Button">
        <item name="android:backgroundTint">@color/secondary_button_background_tint</item>
    </style>

    <style name="Sudox.Button.Secondary" parent="Sudox.Button">
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Sudox.ImageButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
</resources>