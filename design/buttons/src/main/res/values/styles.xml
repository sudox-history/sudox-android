<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:paddingBottom">@dimen/button_padding_bottom</item>
        <item name="android:paddingTop">@dimen/button_padding_top</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Sudox.Button.Primary" parent="Sudox.Button">
        <item name="android:backgroundTint">@color/primary_button_background_tint</item>
    </style>

    <style name="Sudox.Button.Secondary" parent="Sudox.Button">
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Sudox.ImageButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Sudox.BottomLabeledImageButton" parent="">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/bottomlabeledimagebutton_text_size</item>
        <item name="android:textColor">@color/bottomlabeledimagebutton_text_color</item>
        <item name="iconTint">@color/bottomlabeledimagebutton_text_color</item>
    </style>

    <style name="Sudox.TwoLabeledButton" parent="">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/twolabeledbutton_second_line_text_color</item>
        <item name="android:textSize">@dimen/twolabeledbutton_second_line_text_size</item>
        <item name="android:gravity">center</item>

        <item name="firstLineFontFamily">@font/opensans_bold</item>
        <item name="firstLineTextColor">@color/twolabeledbutton_first_line_text_color</item>
        <item name="firstLineTextSize">@dimen/twolabeledbutton_first_line_text_size</item>
    </style>
</resources>