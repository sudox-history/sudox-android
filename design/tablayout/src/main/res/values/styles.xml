<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox.TabLayout" parent="">
        <item name="tabMode">scrollable</item>
        <item name="android:minHeight">@dimen/tab_height</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabIndicator">@drawable/drawable_tab_indicator</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabPaddingEnd">@dimen/tab_half_of_margin</item>
        <item name="tabPaddingStart">@dimen/tab_half_of_margin</item>
        <item name="tabTextAppearance">@style/Sudox.TabLayout.TitleTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tab_title_selected_text_color</item>
        <item name="tabGravity">center</item>
    </style>

    <style name="Sudox.TabLayout.TitleTextAppearance" parent="">
        <item name="android:textSize">@dimen/tab_title_text_size</item>
        <item name="android:textColor">@color/tab_title_text_color</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>
</resources>