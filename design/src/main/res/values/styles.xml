<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SudoxTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:editTextStyle">@style/EditText</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="editTextLayoutStyle">@style/EditTextLayout</item>

        <item name="navigationBarStyle">@style/NavigationBar</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:textColorHint">@color/edittext_hint_color</item>
    </style>

    <style name="EditTextLayout">
        <item name="errorTextColor">@color/edittextlayout_label_text_error_color</item>
        <item name="labelStyle">@style/EditTextLayout.Label</item>
    </style>

    <style name="EditTextLayout.Label">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/edittextlayout_label_text_size</item>
    </style>

    <style name="NavigationBar">
        <item name="android:layout_height">@dimen/navigationbar_height</item>
        <item name="android:background">@color/navigationbar_background</item>
        <item name="android:paddingStart">@dimen/navigationbar_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/navigationbar_horizontal_padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="titleStyle">@style/NavigationBar.Title</item>
        <item name="buttonsStyle">@style/NavigationBar.Button</item>
    </style>

    <style name="NavigationBar.Title">
        <item name="android:textColor">@color/navigationbar_title_text_color</item>
        <item name="android:textSize">@dimen/navigationbar_title_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavigationBar.Button">
        <item name="android:paddingLeft">@dimen/navigationbar_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/navigationbar_button_horizontal_padding</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/navigationbar_button_text_size</item>
        <item name="android:textColor">@color/navigationbar_button_text_color</item>
        <item name="iconTint">@color/navigationbar_button_icon_tint</item>
        <item name="iconTextMargin">@dimen/navigationbar_button_icon_text_margin</item>
    </style>
</resources>