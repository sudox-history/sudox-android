<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox" parent="Sudox.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Sudox.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_background</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="fontFamily">@font/opensans_regular</item>

        <item name="android:editTextStyle">@style/Sudox.EditText</item>
        <item name="editTextStyle">@style/Sudox.EditText</item>

        <item name="applicationBarStyle">@style/Sudox.ApplicationBar</item>
        <item name="applicationBarButtonStyle">@style/Sudox.ApplicationBar.Button</item>
        <item name="countryCodeSelectorStyle">@style/Sudox.CountryCodeSelector</item>
        <item name="phoneEditTextStyle">@style/Sudox.PhoneEditText</item>
        <item name="codeEditTextStyle">@style/Sudox.CodeEditText</item>
        <item name="nicknameEditTextStyle">@style/Sudox.NicknameEditText</item>
        <item name="editTextLayoutStyle">@style/Sudox.EditTextLayout</item>
        <item name="sortedListViewStyle">@style/Sudox.SortedListView</item>
        <item name="countryItemViewStyle">@style/Sudox.CountryItemView</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Sudox.Screen" parent="">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/screen_top_padding</item>
        <item name="android:paddingRight">@dimen/screen_right_padding</item>
        <item name="android:paddingLeft">@dimen/screen_left_padding</item>
    </style>

    <style name="Sudox.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:paddingLeft">@dimen/edittext_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edittext_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_vertical_padding</item>
        <item name="android:paddingTop">@dimen/edittext_vertical_padding</item>
        <item name="android:minHeight">@dimen/edittext_min_height</item>
        <item name="android:minWidth">@dimen/edittext_min_height</item>

        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:textColorHint">@color/edittext_hint_text_color</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Sudox.EditTextLayout" parent="">
        <item name="strokeColor">@color/edittext_stroke_color</item>
        <item name="strokeWidth">@dimen/edittext_stroke_width</item>

        <item name="errorTextAppearance">@style/Sudox.EditTextLayout.ErrorTextAppearance</item>
        <item name="errorTextTopMargin">@dimen/edittext_error_text_top_margin</item>
        <item name="errorTextLeftMargin">@dimen/edittext_error_text_left_margin</item>
    </style>

    <style name="Sudox.EditTextLayout.ErrorTextAppearance" parent="">
        <item name="android:textColor">@color/edittext_error_color</item>
        <item name="android:textSize">@dimen/edittext_error_text_size</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="Sudox.CountryCodeSelector" parent="">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

        <item name="flagWidth">@dimen/countrycodeselector_flag_width</item>
        <item name="flagHeight">@dimen/countrycodeselector_flag_height</item>
        <item name="flagMargin">@dimen/countrycodeselector_flag_margin</item>
    </style>

    <style name="Sudox.PhoneEditText" parent="">
        <item name="separatorDrawable">@color/phoneedittext_separator_color</item>
        <item name="separatorDrawableWidth">@dimen/phoneedittext_separator_width</item>
        <item name="separatorDrawableHeight">@dimen/phoneedittext_separator_height</item>
        <item name="separatorLeftMargin">@dimen/phoneedittext_separator_left_margin</item>
        <item name="separatorRightMargin">@dimen/phoneedittext_separator_right_margin</item>
    </style>

    <style name="Sudox.CodeEditText" parent="">
        <item name="digitsCount">@integer/default_code_length</item>
    </style>

    <style name="Sudox.NicknameEditText" parent="Sudox.EditText">
        <item name="tagTextColor">@color/nicknameedittext_tag_text_color</item>
    </style>

    <style name="Sudox.ApplicationBar" parent="">
        <item name="android:paddingStart">@dimen/applicationbarbutton_padding_left</item>
        <item name="android:paddingEnd">@dimen/applicationbarbutton_padding_right</item>
        <item name="android:clipToPadding">false</item>

        <item name="titleTextAppearance">@style/Sudox.ApplicationBar.TitleTextAppearance</item>
    </style>

    <style name="Sudox.ApplicationBar.TitleTextAppearance" parent="">
        <item name="android:textSize">@dimen/applicationbartitle_text_size</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Sudox.ApplicationBar.Button" parent="">
        <item name="android:paddingStart">@dimen/applicationbarbutton_padding_left</item>
        <item name="android:paddingEnd">@dimen/applicationbarbutton_padding_right</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>

        <item name="textSize">@dimen/applicationbarbutton_text_size</item>
        <item name="textTypeface">@font/opensans_semibold</item>
        <item name="textColor">@color/applicationbarbutton_text_color</item>

        <item name="iconHeight">@dimen/applicationbarbutton_icon_height</item>
        <item name="iconWidth">@dimen/applicationbarbutton_icon_width</item>
    </style>

    <style name="Sudox.SortedListView" parent="">
        <item name="lettersRightPadding">@dimen/sortedlistview_letters_right_padding</item>
        <item name="lettersTopPadding">@dimen/sortedlistview_letters_top_padding</item>
        <item name="lettersTextSize">@dimen/sortedlistview_letters_text_size</item>
        <item name="lettersColor">@color/sortedlistview_letters_text_color</item>
        <item name="lettersFont">@font/opensans_semibold</item>
    </style>

    <style name="Sudox.CountryItemView" parent="">
        <item name="android:paddingTop">@dimen/countryitemview_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/countryitemview_vertical_padding</item>

        <item name="textAppearance">@style/Sudox.CountryItemView.Text</item>
        <item name="flagMargin">@dimen/countryitemview_flag_margin</item>
        <item name="flagHeight">@dimen/countryitemview_flag_height</item>
        <item name="flagWidth">@dimen/countryitemview_flag_width</item>
    </style>

    <style name="Sudox.CountryItemView.Text" parent="">
        <item name="android:textColor">@color/recyclerview_text_color</item>
        <item name="android:textSize">@dimen/recyclerview_text_size</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>
</resources>