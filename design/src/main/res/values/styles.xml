<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox" parent="Sudox.Base">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--  TODO: Вынести в design-common  -->
    <style name="Sudox.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Sudox.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash_background</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="fontFamily">@font/opensans_regular</item>

        <!--    EditTexts     -->
        <item name="editTextLayoutStyle">@style/Sudox.EditTextLayout</item>
        <item name="android:editTextStyle">@style/Sudox.EditText</item>
        <item name="editTextStyle">@style/Sudox.EditText</item>

        <!--    Buttons     -->
        <item name="android:imageButtonStyle">@style/Sudox.Button</item>
        <item name="android:buttonStyle">@style/Sudox.Button</item>
        <item name="imageButtonStyle">@style/Sudox.Button</item>
        <item name="buttonStyle">@style/Sudox.Button</item>

        <!--    Bars    -->
        <item name="appBarStyle">@style/Sudox.AppBar</item>
        <item name="appBarLayoutStyle">@style/Sudox.AppBarLayout</item>
        <item name="bottomNavigationStyle">@style/Sudox.BottomNavigationView</item>
        <item name="tabStyle">@style/Sudox.TabLayout</item>

        <!--    Others     -->
        <item name="circularUpdatableViewStyle">@style/Sudox.CircularUpdatableView</item>

        <!--    Popups    -->
        <item name="popupItemViewStyle">@style/Sudox.PopupItemView</item>
        <item name="listPopupWindowStyle">@style/Sudox.ListPopupWindow</item>

        <!--   ViewList     -->
        <item name="viewListHeaderStyle">@style/Sudox.ViewList.Header</item>
        <item name="viewListStyle">@style/Sudox.ViewList</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <!--  TODO: Remove it  -->
    <style name="Sudox.Screen" parent="">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/screen_top_padding</item>
        <item name="android:paddingBottom">@dimen/screen_top_padding</item>
        <item name="android:paddingRight">@dimen/screen_right_padding</item>
        <item name="android:paddingLeft">@dimen/screen_left_padding</item>
    </style>
</resources>