<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sudox" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/drawable_splash_background</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="fontFamily">@font/avenir_medium</item>

        <item name="android:buttonStyle">@style/Sudox.Button</item>
        <item name="buttonStyle">@style/Sudox.Button</item>

        <item name="android:editTextStyle">@style/Sudox.EditText</item>
        <item name="editTextStyle">@style/Sudox.EditText</item>

        <item name="countryCodeSelectorStyle">@style/Sudox.CountryCodeSelector</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Sudox.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>

        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="Sudox.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:paddingLeft">@dimen/edittext_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/edittext_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/edittext_vertical_padding</item>
        <item name="android:paddingTop">@dimen/edittext_vertical_padding</item>

        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="Sudox.CountryCodeSelector">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

        <item name="flagWidth">@dimen/countrycodeselector_flag_width</item>
        <item name="flagHeight">@dimen/countrycodeselector_flag_height</item>
        <item name="flagMargin">@dimen/countrycodeselector_flag_margin</item>
    </style>
</resources>